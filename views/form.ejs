      <div class="container-fluid">
            
        <form action="/" method="POST">
            <div class="form-group">
              <label for="n" class="h3">Name:</label>
              <input type="text" class="form-control" id="n" placeholder="Enter name" name="name" required>
            </div>
            <div class="form-group">
              <label for="phone" class="h3">Phone Number:</label>
              <input type="text" class="form-control" id="phone" placeholder="Enter Phone No" name="phone" required>
            </div>
            <button type="submit" class="btn btn-success m-3">ADD</button>
          </form>

          <p id="subscriber">Scriber to be added:</p>
          <p id="nam">Name: <span id="putName"></span></p>
          <p id="ph">Phone: <span id="putPhone"></span></p>

          

